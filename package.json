{
  "name": "sms-at-command-system",
  "version": "1.0.0",
  "description": "SMS AT Command System with Railway deployment",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "NODE_ENV=development nodemon server/index.js",
    "build": "cd admin && npm install && npm run build",
    "postbuild": "cp -r admin/build server/public",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "railway:build": "npm install && npm run build",
    "railway:start": "npm run db:migrate && npm start"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "winston": "^3.11.0",
    "multer": "^1.4.5",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
